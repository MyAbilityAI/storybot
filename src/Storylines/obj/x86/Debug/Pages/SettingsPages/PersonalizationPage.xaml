<Page x:ConnectionId='1'
    x:Class="Storylines.Pages.SettingsPages.PersonalizationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"                                                                                      >
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ResourceDictionaries/RightAlignedToggleSwitchStyle.xaml" />
                <ResourceDictionary Source="/Resources/ResourceDictionaries/CustomExpanderStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
   
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel x:ConnectionId='2' x:Name="personalizationPage" Margin="35,35,35,0" Spacing="6" HorizontalAlignment="Left" Width="1000">
            <TextBlock x:Uid="personalizationText" FontSize="25" Margin="0,-5,0,5" FontWeight="SemiBold"/>

            <Grid Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource ElementBorderColor}" BorderThickness="{ThemeResource ElementBorderThickness}" CornerRadius="4" Padding="0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <FontIcon Glyph="" HorizontalAlignment="Center" />
                <TextBlock x:Uid="chooseThemeSetting" VerticalAlignment="Center" TextWrapping="Wrap" Grid.Column="1"/>
                <ComboBox x:ConnectionId='6' x:Name="themeComboBox" HorizontalAlignment="Right" HorizontalContentAlignment="Left" VerticalAlignment="Center" Height="30" Width="120" SelectedIndex="2" Grid.Column="2"                                                    >
                    <ComboBox.Items>
                        <ComboBoxItem x:Uid="light"/>
                        <ComboBoxItem x:Uid="dark"/>
                        <ComboBoxItem x:Uid="system"/>
                    </ComboBox.Items>
                </ComboBox>
            </Grid>

            <muxc:Expander Style="{StaticResource CustomExpanderStyle}" BorderBrush="{ThemeResource LayerFillColorDefaultBrush}" BorderThickness="{ThemeResource ElementBorderThickness}" HorizontalAlignment="Stretch" VerticalAlignment="Top" HorizontalContentAlignment="Left" IsExpanded="True">
                <muxc:Expander.Header>
                    <Grid Padding="-15,20,-12,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="75"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon Glyph="" HorizontalAlignment="Center" />
                        <TextBlock x:Uid="chooseAccentColorSetting" VerticalAlignment="Center" TextWrapping="Wrap" Grid.Column="1"/>
                        <ComboBox x:ConnectionId='4' x:Name="accentComboBox" HorizontalAlignment="Right" HorizontalContentAlignment="Left" VerticalAlignment="Center" Height="30" Width="120" SelectedIndex="1" Grid.Column="2"                                                     >
                            <ComboBox.Items>
                                <ComboBoxItem x:Uid="system"/>
                                <ComboBoxItem x:Uid="app"/>
                                <ComboBoxItem x:Uid="custom"/>
                            </ComboBox.Items>
                        </ComboBox>
                    </Grid>
                </muxc:Expander.Header>
                <muxc:Expander.Content>
                    <ColorPicker x:ConnectionId='5' x:Name="customAccentPicker" Margin="30,10" HorizontalAlignment="Left" ColorSpectrumShape="Ring" IsMoreButtonVisible="False"
                         IsColorSliderVisible="True" IsColorChannelTextInputVisible="True" IsHexInputVisible="True" IsAlphaEnabled="False" IsEnabled="False"                                        />
                </muxc:Expander.Content>
            </muxc:Expander>

            <Grid Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource ElementBorderColor}" BorderThickness="{ThemeResource ElementBorderThickness}" CornerRadius="4" Padding="0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <FontIcon Glyph="" HorizontalAlignment="Center" />
                <StackPanel VerticalAlignment="Center" Spacing="1" Grid.Column="1">
                    <TextBlock x:Uid="newChapterShortcut" VerticalAlignment="Center" TextWrapping="Wrap"/>
                    <TextBlock x:Uid="newChapterShortcutDesc" FontWeight="Light" Opacity="0.8" VerticalAlignment="Center" TextWrapping="Wrap" Margin="0,0,10,0"/>
                </StackPanel>
                <ToggleSwitch x:ConnectionId='3' x:Name="addChapterOnPageDownToggleSwitch" Style="{StaticResource RightAlignedToggleSwitchStyle}" HorizontalAlignment="Right" Grid.Column="2"                                                     />
            </Grid>
            
            <StackPanel.ChildrenTransitions>
                <TransitionCollection>
                    <EntranceThemeTransition IsStaggeringEnabled="True" FromVerticalOffset="50"/>
                </TransitionCollection>
            </StackPanel.ChildrenTransitions>
        </StackPanel>
    </ScrollViewer>
</Page>

