<ContentDialog x:ConnectionId='1'
    x:Class="Storylines.Components.DialogueWindows.SaveDialogue"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations" xmlns:customcontrols="using:Storylines.Components.CustomControls" xmlns:resources="using:Storylines.Resources"
    mc:Ignorable="d" CornerRadius="8"                                                                Background="{ThemeResource AppAcrylicBackground}"                            >

    <StackPanel Spacing="8" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="300" Margin="4">
        <TextBlock x:ConnectionId='2' x:Name="title" Style="{StaticResource DialogueWindowHeaderStyle}"/>

        <Grid>
            <StackPanel Spacing="14">
                <!--For animation to work properly-->
                <StackPanel Spacing="8">
                    <TextBlock x:ConnectionId='12'                                                   />
                    <TextBox x:ConnectionId='13' x:Name="nameText"                                                                          Width="300" Height="38" MaxLength="400" Style="{StaticResource SmallTextBoxStyle}"/>
                </StackPanel>

                <StackPanel Spacing="8">
                    <TextBlock x:Uid="fileName"/>
                    <StackPanel Spacing="8" Orientation="Horizontal">
                        <TextBox x:ConnectionId='10' x:Name="fileNameText" x:Uid="fileNamePlaceh" Width="212" Height="38" Style="{StaticResource SmallTextBoxStyle}" MaxLength="255"                                    />
                        <ComboBox x:ConnectionId='11' x:Name="extensionComboBox"                                                SelectedIndex="0" Height="38" CornerRadius="4" Width="80" VerticalAlignment="Bottom" HorizontalAlignment="Right"                                                                                                        />
                    </StackPanel>
                    <TextBlock x:ConnectionId='9' x:Name="nameCollisionWarning" x:Uid="fileDoesNotExist" Foreground="Red" FontSize="12" TextWrapping="WrapWholeWords" Visibility="Collapsed"/>
                </StackPanel>

                <StackPanel Spacing="8">
                    <TextBlock x:Uid="location"/>
                    <StackPanel Spacing="8" Orientation="Horizontal">
                        <Grid x:ConnectionId='5' Width="248"                                                            CornerRadius="4" BorderThickness="1"                                                          Padding="10,0"                                    >
                            <TextBlock x:ConnectionId='7' x:Name="locationTextPlaceholder" x:Uid="fileLocation" Opacity="0.8" VerticalAlignment="Center"/>
                            <TextBlock x:ConnectionId='8' x:Name="locationText" VerticalAlignment="Center" Visibility="Collapsed"/>
                        </Grid>
                        <Button x:ConnectionId='6' Height="38" CornerRadius="4" Width="44" VerticalAlignment="Bottom" HorizontalAlignment="Right"                                     >
                            <Button.Content>
                                <FontIcon Glyph="" RenderTransformOrigin=".5,.5">
                                    <FontIcon.RenderTransform>
                                        <CompositeTransform ScaleX=".78" ScaleY=".78"/>
                                    </FontIcon.RenderTransform>
                                </FontIcon>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </StackPanel>
                <Grid Margin="0, 8, 0, 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <customcontrols:SymbolButton x:ConnectionId='3' x:Name="submitButton"                                               Glyph="" IsPrimary="True" IsEnabled="False" HorizontalAlignment="Stretch"                             />
                    <customcontrols:SymbolButton x:ConnectionId='4' IsCancel="True" Grid.Column="2" HorizontalAlignment="Stretch"                             />
                </Grid>
            </StackPanel>
            <animations:Implicit.ShowAnimations>
                <animations:TranslationAnimation Duration="0:0:0.65" From="0, -10, 0" To="0"/>
                <animations:OpacityAnimation Duration="0:0:0.65" From="0" To="1.0"/>
            </animations:Implicit.ShowAnimations>
        </Grid>
    </StackPanel>
</ContentDialog>

